<Page x:Class="ClimateTechRepairmentSystem.Views.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClimateTechRepairmentSystem.Views"
      xmlns:vm="clr-namespace:ClimateTechRepairmentSystem.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Учет заявок на ремонт климатического оборудования">

    <Page.DataContext>
        <vm:MenuViewModel />
    </Page.DataContext>
    
    <Grid>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Заявки"
                    Command="{Binding GoToRequestsCommand}"/>
        </StackPanel>
        
    </Grid>
    
</Page>
